---
const { tagname } = Astro.props;
---

<a href=`/tags/${tagname}`>
    {tagname}
</a>
<style>
    a {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: var(--primary-color);
        background-color: rgba(255, 255, 255, 0.08);
        color: white;
        font-weight: 500;
        border-radius: 1rem;
        font-size: 0.75rem;
        transition: all 300ms linear;
    }
    a:hover {
        background-color: var(--primary-color);
    }
</style>
